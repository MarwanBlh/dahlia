<h1 class="text-center">Ajouter un soin</h1>

<div class="d-flex justify-content-center m-3">
  <div id="input-custom" class="input-g">
    <%= simple_form_for  [:consultation, @treatment] do |f| %>
      <%= f.input :content, label: "contenu", placeholder: " ",
        wrapper_html: { class:"input-groupe" },
        input_html: { class:"input"},
        label_html: {class:"user-label"} %>
      <%= f.input :category, label: "catégorie",
      as: :radio_buttons,
      collection_wrapper_tag: 'div',
      collection_wrapper_class: 'category-wrapper',
      item_wrapper_class: 'category-item',
      input_html: {class: 'category-selector treatment_category'},
      collection: Treatment::CATEGORY %>
      <div class="d-flex justify-content-center">
        <%= f.button :submit, "Créer un traitement", class: "btn-submit" %>
      </div>
    <% end %>
  </div>
</div>
