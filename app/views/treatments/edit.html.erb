<div class="return-bouton-treatments">
  <%= image_tag "icones/retour.svg" %>
</div>

<div class="general-div">

  <h3>MODIFIER UN<br>SOIN</h3>

  <div class="d-flex justify-content-center m-3">
    <div id="input-custom" class="input-g">
      <%= simple_form_for  [@treatment] do |f| %>

        <%= f.input :category, label: "",
        as: :radio_buttons,
        collection_wrapper_tag: 'div',
        collection_wrapper_class: 'category-wrapper',
        item_wrapper_class: 'category-item',
        input_html: {class: 'category-selector treatment_category'},
        collection: Treatment::CATEGORY %>

        <%= f.input :content, :label => false, placeholder: "DÃ©tail du soin",
          wrapper_html: { class:"input-groupe" },
          input_html: { class:"input"},
          label_html: {class:"user-label"} %>

        <div class="d-flex justify-content-center">
          <%= f.button :submit, "MODIFIER LE SOIN", class: "btn" %>
        </div>
      <% end %>

      <div class="destroy-treatment" data-controller="modal-confirmation-to-destroy">
        <p class="btn" data-action="click->modal-confirmation-to-destroy#displayModal">Supprimer le soin</p>

        <div class="modal-confirmation-destroy d-none" data-modal-confirmation-to-destroy-target="modal">
          <div class="message-confirmation-destroy">
            <p>Voulez-vous vraiment supprimer le soin?</p>
          </div>
          <!-- <div class="d-flex justify-content-around align-items-center"> -->
          <div class="select-confirmation-destroy">
            <%= link_to "Oui", treatment_path(@treatment), data: {turbo_method: :delete}, class:"btn" %>
            <%= link_to "Non", "#", data: { action:"click->modal-confirmation-to-destroy#displayModal" }, class:"btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
