          <%# START - Checkbox and end_date field to make the consultation recurrent %>
            <%# Checkbox %>
            <div class="" data-controller="edit">
              <div>
                <div class="consultation_new" data-action="click->edit#displayFormDate">
                  <%= f.input :recurring,
                              as: :boolean,
                              checked_value: true,
                              boolean_style: :inline,
                              include_hidden: false,
                              label: " Soin régulier ?",
                              placeholder: " ",
                              wrapper_html: { class:"input-groupe" },
                              input_html: { class:"" },
                              label_html: { class:"" } %>
                </div>
              </div>

              <div class="d-none" data-edit-target="formDate">
                <%# end_date %>
                <%= f.simple_fields_for :consultation_groups do |m| %>
                  <div class="consultation_new">
                    <p>Définir une date de fin et une fréquence</p>
                    <%= m.input :end_date,
                                label: "Date & heure",
                                placeholder: " ",
                                as: :date,
                                html5: true,
                                label: false,
                                required: false,
                                wrapper_html: { class:" datefield-without-calendar"},
                                input_html: { class:"input" },
                                label_html: { class:"user-label" } %>
                    <%= m.input :frequency,
                                collection: frequency,
                                label: "Fréquence",
                                placeholder: " ",
                                required: false,
                                wrapper_html: { class:"input-groupe"},
                                input_html: { class:"input" },
                                label_html: { class:"user-label" } %>
                  </div>
                <% end %>
              </div>
            </div>
          <%# END - Checkbox and end_date field to make the consultation recurrent %>
