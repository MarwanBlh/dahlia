<div class="container-patient">
  <div class="card-consult">
      <div class="card-consult-header">
        <%= image_tag "avatar_homme.svg" %>
        <div class="card-info">
          <div class="card-patient-name">
            <%= @patient.first_name %>  <%= @patient.last_name %>
          </div>
          <div class="info-adresse">
            <i class="fa-solid fa-location-dot"></i>
            <div class="text-adresse"><%= @patient.address %></div>
          </div>
        </div>
      </div>
    </div>



  <div id="tab-patient">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="btn btn-tab btn-patient active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Fiche Patient</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="btn btn-tab btn-consult" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Consultations</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
        <%= render "shared/fiche_patient" %>
      </div>
      <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
        <div class="last-consultations">
          <h3> Dernières consultations</h3>
          <%= link_to "+", new_consultation_path,class:"btn btn-create" %>
        </div>
        <%= render "shared/consultations_patient" %>
      </div>
    </div>
  </div>

  <% unless @last_consultation.nil? %>
    <%= link_to "Dernière consultation", consultation_path(@last_consultation),class:"btn btn-submit" %>
  <% end %>
</div>
